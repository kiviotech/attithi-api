{
  "kind": "collectionType",
  "collectionName": "message_templates",
  "info": {
    "singularName": "message-template",
    "pluralName": "message-templates",
    "displayName": "MessageTemplate"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Name": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 5,
      "maxLength": 20
    },
    "content": {
      "type": "blocks"
    },
    "body": {
      "type": "string"
    },
    "channel": {
      "type": "enumeration",
      "enum": [
        "sms",
        "email",
        "whatsapp"
      ]
    },
    "notifications": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::notification.notification",
      "mappedBy": "message_template"
    }
  }
}
